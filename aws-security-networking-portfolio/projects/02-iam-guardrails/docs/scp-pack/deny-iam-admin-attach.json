{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyAttachAdminOutsideApprovedRoles",
      "Effect": "Deny",
      "Action": [
        "iam:AttachRolePolicy",
        "iam:AttachUserPolicy",
        "iam:PutUserPolicy",
        "iam:PutRolePolicy"
      ],
      "Resource": "*",
      "Condition": {
        "StringNotLike": {
          "aws:PrincipalArn": [
            "arn:aws:iam::*:role/BreakGlassAdminRole"
          ]
        }
      }
    }
  ]
}